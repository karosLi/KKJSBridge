{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "pretty": true,
    "baseUrl": ".",
    "allowJs": true,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/index.ts"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    "src/**/*.ts", "types/**/*.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  
}